<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:id="@+id/editmessage"
        android:layout_marginTop="57dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/sendmessage"
        android:layout_alignStart="@+id/sendmessage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Message"
        android:id="@+id/message"
        android:layout_alignTop="@+id/editmessage"
        android:layout_toLeftOf="@+id/editmessage"
        android:layout_toStartOf="@+id/editmessage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/sendmessage"
        android:layout_marginTop="67dp"
        android:layout_below="@+id/editmessage"
        android:layout_centerHorizontal="true" />
</RelativeLayout>